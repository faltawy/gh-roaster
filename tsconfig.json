{
  "compilerOptions": {
    "incremental": true,
    "target": "es2022",
    "module": "Node16",
    "declaration": false,
    "sourceMap": false,
    "outDir": "./lib",

    /* Strict Type-Checking Options */
    "strict": true,
    "declarationMap": false,
    /* Additional Checks */
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "allowJs": true,
    "moduleResolution": "Node16",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "allowUnusedLabels": true,
    "noUnusedLocals": false, // suppress unused local variables
    "noUnusedParameters": false,
  },
  "include": ["src/", "functions/"],
  "exclude": [
    "node_modules",
    "lib",
    "dist",
    "spec",
    "specs"
  ],
  "compileOnSave": false
}
